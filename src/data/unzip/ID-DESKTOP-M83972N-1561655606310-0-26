<?php

namespace App;

use Illuminate\Database\Eloquent\Model;

class Constants extends Model 
{
    public static function getNumberVendor()
    {
        return 1706;
    }

    public static function getImagesRootPath()
    {
        return $_SERVER['DOCUMENT_ROOT'].'/storage/images';
    }

    public static function getGeneralImagesPath()
    {
        return '/general';
    }

    public static function getPetImagesPath()
    {
        return '/pet';
    }

    public static function getUserImagesPath()
    {
        return '/user';
    }

    public static function getShopImagesPath()
    {
        return '/shop';
    }

    public static function getProductImagesPath()
    {
        return '/product';
    }
}
